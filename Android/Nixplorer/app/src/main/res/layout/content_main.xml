<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        android:layout_margin="10dp">

        <TextView
        android:text="\n\nOlá,"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:text="Seja, bem-vindo ao Nixplorer!"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="\n\nEste é um aplicativo para o controle automatizado de um telescópio. Com ele você pode usar um sistema GoTo, ou pode escolher quantos graus girar."
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Arraste a aba ao lado para acessar a página de controles."
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>